<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Quote</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body class="user-select-none">
    <div class="containerr">
        <header class="header">
            <div class="header-title "><a class="navbar-brand text-light" href="/">Daily Quote</a></div>
            <div class="relative">
                <button class="profile-button" type="button" id="profile-menu-button" aria-haspopup="menu"
                    aria-expanded="false" data-state="closed">
                    <span class="profile-initials">
                        <%= user.name.charAt(0).toUpperCase() + user.name.charAt(1).toUpperCase() %>
                    </span>
                </button>
                <div id="profile-menu" class="profile-menu">
                    <!-- <a href="#" class="profile-menu-item">
                        <i class="fas fa-user-edit"></i> Edit User
                    </a> -->
                    <a href="/api/user/logout" id="logout" class="profile-menu-item">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </header>
        <main class="main">
            <div class="content">
                <section class="user-info">
                    <h2>User Information</h2>
                    <div class="user-details">
                        <p><b>Name:</b> <%= user.name %>
                        </p>
                        <p><b>Email:</b> <%= user.email %>
                        </p>
                    </div>
                </section>
                <form id="user-setting">
                    <section class="settings">
                        <h2>Daily Quote Settings</h2>
                        <div class="settings-grid">
                            <div class="setting-item">
                                <h3>Time to Receive Quote</h3>
                                <input type="text" id="time-picker" class="time-picker" name="time"
                                    value="<%= user.time %>">
                            </div>
                            <div class="setting-item">
                                <h3>Daily Quote</h3>
                                <div class="switch-container">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="recieve-quote" <% if
                                            (user.quote) { %>
                                        checked
                                        <% } %> name="quote" value="true">
                                            <label class="form-check-label" for="recieve-quote">Receive daily
                                                quote</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="save-button-container">
                            <button class="save-button">Save Changes</button>
                        </div>
                    </section>
                </form>
                <div class="modal fade" id="submitModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div  class="modal-dialog modal-sm">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Success</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Your preference have been updated
                        </div>
                        </div>
                    </div>
                    </div>
            </div>
        </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script src="/scripts/dashboard.js"></script>

    </div>
</body>

</html>